@model List<Food_Recipe.Domain.Models.User>

@{
    ViewData["Title"] = "User List";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Food_Recipe.styles.css" asp-append-version="true" />
    <style>
        .topbar {
            position: sticky;
            top: 0;
            z-index: 999;
            border-bottom: 1px solid #ddd;
            box-shadow: 0 2px 4px rgba(0, 0, 0, .05);
        }

        .recipe-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 18px;
            box-shadow: 0 2px 7px rgba(0, 0, 0, .05);
        }

            .recipe-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 8px;
                margin-bottom: 10px;
            }

        .rating {
            color: #ffc107;
            font-weight: 600;
        }

        .details-section h4 {
            font-size: 1rem;
            margin-top: 12px;
            color: #ff7047;
        }

        .bottom-buttons .btn {
            width: 100%;
            margin-bottom: 6px;
        }

       
        .btn-outline-white {
            color: white;
            border-color: white;
            background-color: transparent;
        }

            .btn-outline-white:hover,
            .btn-outline-white:focus,
            .btn-outline-white:active,
            .btn-outline-white.active,
            .btn-outline-white:focus-visible {
                color: #333;
                background-color: white;
                border-color: white;
            }

           
            .btn-outline-white.approved:hover {
                background-color: #28a745; 
                color: white;
            }

            .btn-outline-white.pending:hover {
                background-color: #ffc107;
                color: white;
            }

            .btn-outline-white.users:hover {
                background-color: #17a2b8; 
                color: white;
            }

            .btn-outline-white.logout:hover {
                background-color: #dc3545; 
                color: white;
            }

    </style>
</head>

<body class="bg-light">
    <header class="topbar d-flex justify-content-between align-items-center p-3">
        <img src="~/images/Delicious_Recipes.png" alt="Logo" />
        <h3>Delicious Recipes</h3>
        
        <h3>Admin Dashboard</h3>
        
        <div>
            <a asp-controller="Admin" asp-action="Dashboard" asp-route-status="approved"
               class="btn btn-outline-white btn-sm me-2 approved">Approved ✅</a>

            <a asp-controller="Admin" asp-action="Dashboard" asp-route-status="pending"
               class="btn btn-outline-white btn-sm me-3 pending">Pending ⏳</a>

            <a asp-controller="Admin" asp-action="Users"
               class="btn btn-outline-white btn-sm me-2 users">Users 👥</a>

            <a asp-controller="Admin" asp-action="Logout"
               class="btn btn-outline-white btn-sm logout">Logout 🔒</a>
        </div>
    </header>

    <div class="container mt-5">
        <h3 class="text-center">Registered Users</h3>

        <table class="table table-bordered mt-4 bg-white">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Gmail</th>
                    <th>Password</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                    </tr>
                }
            </tbody>
        </table>

        
    </div>

</body>
</html>
